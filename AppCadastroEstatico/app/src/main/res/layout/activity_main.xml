<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#708EB2CF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/saudacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bem-Vindo"
        android:textSize="28sp"
        android:gravity="center"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fotoPerfil"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_image_profile"
        android:padding="2.1sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/saudacao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_profile"
        tools:ignore="MissingConstraints"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/fotoPerfil"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtNome"
            android:background="@drawable/bg_edit"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:lines="1"
            android:maxLength="40"
            android:hint="Nome" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_edit"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:hint="Email"
            android:lines="1"
            android:maxLength="40"/>

        <TextView
            android:id="@+id/txtSenha"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_edit"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:hint="Senha"
            android:lines="1"
            android:maxLength="8"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>