<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#708EB2CF"
    tools:context=".CadastroActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cadFotoPerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/bg_image_profile"
        android:padding="2.1sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_profile"
        tools:ignore="MissingConstraints"/>

    <LinearLayout
        android:id="@+id/cadLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/cadFotoPerfil"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/cadTxtNome"
            android:background="@drawable/bg_edit"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="14dp"
            android:inputType="textPersonName"
            android:lines="1"
            android:maxLength="40"
            android:hint="Nome" />

        <EditText
            android:id="@+id/cadTxtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_edit"
            android:padding="14dp"
            android:layout_marginBottom="20dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLength="40"/>

        <EditText
            android:id="@+id/cadTxtSenha"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_edit"
            android:padding="14dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="8"/>
    </LinearLayout>

    <Button
        android:id="@+id/cadBtnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit"
        app:layout_constraintTop_toBottomOf="@id/cadLinear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:text="Salvar"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>